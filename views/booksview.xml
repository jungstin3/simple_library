<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- books.buku tree view -->
        <record id="books_buku_view_tree" model="ir.ui.view">
            <field name="name">books.buku.view.tree</field>
            <field name="model">books.buku</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="image" widget="image"/>
                    <field name="name"/>
                    <field name="penulis"/>
                    <field name="jumlah"/>
                    <field name="tanggal_terbit"/>
                    <field name="kategori"/>
                    <field name="deskripsi"/>
                </list>
            </field>
        </record>
        <!-- books.buku form view -->
        <record id="books_buku_view_form" model="ir.ui.view">
            <field name="name">books.buku.view.form</field>
            <field name="model">books.buku</field>
            <field name="arch" type="xml">
                <form string="Informasi Buku">
                    <sheet>
                        <group>
                            <!-- Add your fields here -->
                            <field name="image" widget="image"/>
                            <field name="name"/>
                            <field name="penulis"/>
                            <field name="jumlah"/>
                            <field name="tanggal_terbit"/>
                            <field name="kategori"/>
                            <field name="deskripsi"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
        <!-- <menuitem id="perpustakaan_sekolah_menu_root" name="School Library"/> -->
        
        <record id="books_buku_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Buku</field>
            <field name="res_model">books.buku</field>
            <field name="view_mode">list,form</field>
        </record> 
        <!-- This Menu Item Must have a parent
        <! <menuitem id="books_menu_categ" name="Mengenai Buku" parent="perpustakaan_sekolah_menu_root" sequence="2"/> -->
        <!-- This Menu Item must have a parent and an action -->
        <!-- <menuitem id="books_buku_menu_act" name="Buku" parent="books_menu_categ" action="books_buku_act_window" sequence="1"/> -->
                    
    </data>
</odoo>