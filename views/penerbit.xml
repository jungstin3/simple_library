<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!--penerbit tree view -->
        <record id="penerbit_view_tree" model="ir.ui.view">
            <field name="name">penerbit.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="email"/>
                    <field name="state_id"/>
                    <!-- <field name="email"/> -->
                    <!-- <field name="language"/> -->
                </list>
            </field>
        </record>

        <!-- penerbit form view -->
        <record id="penerbit_view_form" model="ir.ui.view">
            <field name="name">penerbit.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <!-- <xpath expr="//field[@name='born_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='death_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath> -->
            </field>
        </record>

